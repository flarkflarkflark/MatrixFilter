# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cpp text eol=lf
*.h text eol=lf
*.c text eol=lf
*.hpp text eol=lf

# CMake
*.cmake text eol=lf
CMakeLists.txt text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.clap binary
*.vst3 binary
*.lv2 binary
*.so binary
*.dll binary
*.dylib binary
*.a binary
*.lib binary
*.exe binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Audio
*.wav binary
*.mp3 binary
*.ogg binary
*.flac binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
build/ export-ignore
